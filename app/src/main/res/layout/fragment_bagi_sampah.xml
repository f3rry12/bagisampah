<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgUploadSampah"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="4dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/blankimage"
                android:scaleType="centerInside"
                android:background="@drawable/blankimgbg"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#212121"
                android:text="Nama Sampah"
                android:layout_marginHorizontal="5dp"
                android:textSize="25sp"
                android:layout_marginVertical="5dp"
                />
            <EditText
                android:id="@+id/namaSampah"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#212121"
                android:text="Deskripsi"
                android:layout_marginHorizontal="5dp"
                android:textSize="25sp"
                android:layout_marginVertical="5dp"
                />
            <EditText
                android:id="@+id/deskripsiSampah"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#212121"
                android:text="Kategori"
                android:layout_marginHorizontal="5dp"
                android:textSize="25sp"
                android:layout_marginVertical="5dp"
                />
            <Spinner
                android:id="@+id/spinnerKategori"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                android:entries="@array/kategori_array"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#212121"
                android:text="Lokasi"
                android:layout_marginHorizontal="5dp"
                android:textSize="25sp"
                android:layout_marginVertical="5dp"
                />

            <ImageView
                android:id="@+id/imgMaps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/intentmap"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#212121"
                android:text="Alamat"
                android:layout_marginHorizontal="5dp"
                android:textSize="25sp"
                android:layout_marginVertical="5dp"
                />
            <EditText
                android:id="@+id/alamatSampah"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:maxLines="8"
                android:lines="4"
                />

            <TextView
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#212121"
                android:text="Harga :"
                android:layout_marginHorizontal="5dp"
                android:textSize="25sp"
                android:layout_marginVertical="5dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="24sp"
                    android:textColor="#212121"
                    android:text="Rp"
                    />

                <EditText
                    android:id="@+id/hargaSampah"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:inputType="numberDecimal"
                    android:maxLength="6"/>

            </LinearLayout>



            <Button
                android:text="BAGIKAN"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:background="@drawable/round_button"
                android:id="@+id/btn_post"
                android:layout_marginVertical="24dp"
                android:layout_marginHorizontal="40dp"
                android:layout_width="match_parent"
                android:layout_height="55dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>