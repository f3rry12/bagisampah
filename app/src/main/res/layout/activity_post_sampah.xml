<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostSampah">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="380dp"
                android:layout_height="300dp"
                android:layout_margin="5dp"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Sampah"
                android:layout_marginHorizontal="5dp"
                android:textSize="25sp"
                android:layout_marginVertical="5dp"
                />
            <EditText
                android:id="@+id/namaSampah"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:layout_marginHorizontal="5dp"
                android:textSize="25sp"
                android:layout_marginVertical="5dp"
                />
            <EditText
                android:id="@+id/deskripsiSampah"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kategori"
                android:layout_marginHorizontal="5dp"
                android:textSize="25sp"
                android:layout_marginVertical="5dp"
                />
            <EditText
                android:id="@+id/kategoriSampah"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:layout_marginHorizontal="5dp"
                android:textSize="25sp"
                android:layout_marginVertical="5dp"
                />
            <EditText
                android:id="@+id/alamatSampah"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harga"
                android:layout_marginHorizontal="5dp"
                android:textSize="25sp"
                android:layout_marginVertical="5dp"
                />
            <EditText
                android:id="@+id/hargaSampah"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp" />
            <Button
                android:text="Post Sampah"
                android:id="@+id/btn_post"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                android:layout_width="match_parent"
                android:layout_height="55dp" />
        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>